@if (!string.IsNullOrEmpty(Message))
{
    // Container für das Endspiel-Popup.
    <div class="endgame-popup">
        @Message
        <button class="btn btn-primary mt-2" @onclick="OnNewGameClicked">Neues Spiel?</button>
    </div>
}

@code {
    [Parameter] public string? Message { get; set; } // Die anzuzeigende Endspielnachricht.
    [Parameter] public EventCallback OnNewGameClicked { get; set; } // Event-Callback für den Klick auf "Neues Spiel?".
}